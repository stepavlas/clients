<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:ws="http://jax-ws.dev.java.net/spring/core"
       xmlns:wss="http://jax-ws.dev.java.net/spring/servlet"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://jax-ws.dev.java.net/spring/core http://jax-ws.dev.java.net/spring/core.xsd
                           http://jax-ws.dev.java.net/spring/servlet http://jax-ws.dev.java.net/spring/servlet.xsd">

       <import resource="serviceConfig.xml"/>

       <bean id="clientEndpoint" class="com.stepavlas.restApp.ClientEndpoint">
              <property name="service" ref="clientService"/>
       </bean>

       <!--binds url defined in web.xml to endpoint-->
       <wss:binding url="/clientService">
              <wss:service>
                     <ws:service bean="#clientEndpoint"/>
              </wss:service>
       </wss:binding>
</beans>